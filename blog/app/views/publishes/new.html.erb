<%= render "layouts/header"%>
<% if @publish.errors %>

  <%= form_for @publish, url:{action: 'create'} do |f|%>
    <%= f.label :title%>
    <%= f.text_field :title%> <%=@publish.errors.full_messages[0]%>
    <br>
    <br>
    <%= f.label :author%>
    <%= f.text_field :author%><%=@publish.errors.full_messages[1]%>
    <br>
    <br>
    <%= f.label :content%>
    <%= f.text_area :content%><%=@publish.errors.full_messages[2]%>
    <br>
    <br>
    <%=f.submit%>
  <% end %>

<% else %>
  <%= form_for @publish, url:{action: 'create'} do |f|%>
    <%= f.label :title%>
    <%= f.text_field :title%>
    <br>
    <br>
    <%= f.label :author%>
    <%= f.text_field :author%>
    <br>
    <br>
    <%= f.label :content%>
    <%= f.text_area :content%>
    <br>
    <br>
    <%=f.submit%>
  <% end %>
<% end %>
